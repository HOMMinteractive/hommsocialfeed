<div class="btn menubtn" role="button">{{ "Change color"|t('hommsocialfeed') }}</div>
<div class="menu">
    <ul>
        {% for handle, color in colors|reverse %}
            <li>
                <a class="formsubmit"
                   data-param="color"
                   data-value="{{ handle != 'reset' ? handle : '' }}"
                   style="background: {{ color != 'reset' ? color : 'unset' }}"
                >
                    {% if handle == 'reset' %}
                        {{- "None"|t('hommsocialfeed') -}}
                    {% else %}
                        {{- handle|capitalize -}}
                    {% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
